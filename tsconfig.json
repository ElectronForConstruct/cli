{
  "compilerOptions": {
    "resolveJsonModule": true,
      "allowJs": true,
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "./src/**/*"
  ]
}
