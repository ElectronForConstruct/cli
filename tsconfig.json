{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "strict": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/definitions/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
