{
  "name": "@efc/cli",
  "version": "2.3.8",
  "description": "A command-line tool to manage your Construct Electron projects",
  "scripts": {
    "start": "node src/app.js",
    "release": "np --yolo",
    "up": "yarn upgrade-interactive --latest && syncyarnlock -s -k",
    "test": "echo 1",
    "postpublish": "git log v2.3.7..master --pretty=format:\"- %Cred%h%Creset %s%n%b%n\" --abbrev-commit",
	"package-it": "pkg dist/index.js --output bin/efc",
	"build": "ncc build index.js -o dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ElectronForConstruct/cli"
  },
  "preferGlobal": true,
  "bin": {
    "efc": "./index.js"
  },
  "engines": {
    "node": ">=9"
  },
  "pkg": {    
    "assets": ["new-project-template/**/*", "template/**/*"]
  },
  "author": "Armaldio <armaldio@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "4.6.4",
    "adm-zip": "^0.4.13",
    "babel-minify": "^0.5.0",
    "boxen": "^3.0.0",
    "chalk": "^2.4.2",
    "decompress": "^4.2.0",
    "decompress-targz": "^4.1.1",
    "deepmerge": "^3.2.0",
    "dotenv": "^7.0.0",
    "electron-builder": "^20.39.0",
    "electron-download": "^4.1.1",
    "electron-packager": "^13.1.1",
    "enquirer": "^2.3.0",
    "extract-zip": "^1.6.7",
    "github-download": "^0.5.0",
    "install-packages": "^0.2.5",
    "mri": "^1.1.4",
    "node-abi": "^2.7.1",
    "opn": "^5.4.0",
    "ora": "^3.2.0",
    "phin": "^3.3.0",
    "recursive-readdir": "^2.2.2",
    "request": "^2.88.0",
    "semver": "^5.6.0",
    "shelljs": "^0.8.3",
    "time-require": "^0.1.2",
    "tmp": "^0.0.33",
    "windows-shortcuts": "^0.1.6"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "np": "^4.0.2"
  }
}
