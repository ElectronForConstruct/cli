{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "CommonJS",
    "target": "es2018",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "importHelpers": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
